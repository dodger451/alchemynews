{% extends "layout.html" %}

{% block content %}
    <h1>:)</h1>
    <ul class="list-group">
        {% for d in docs %}
            {% if d.source.enriched.url.docSentiment.type == 'positive' %}
                 <li class="list-group-item list-group-item-success"> {{ d.timestamp|date("m/d/Y")  }} <a href="{{ d.source.enriched.url.url }}">{{ d.source.enriched.url.title }} </a>
                     <span class="badge">{{ d.source.enriched.url.docSentiment.score | round(2, 'ceil')  }}</span>
                     <br/>
                     {% for c in d.source.enriched.url.concepts %}  <span class="label label-success">{{ c.text  }}</span> {% endfor %}
                 </li>
            {% endif %}
        {% endfor %}
    </ul>

    <h1>:|</h1>
    <ul>
        {% for d in docs %}
        {% if d.source.enriched.url.docSentiment.type == 'neutral' %}
            <li class="list-group-item list-group-item-warning"> {{ d.timestamp|date("m/d/Y")  }} <a href="{{ d.source.enriched.url.url }}">{{ d.source.enriched.url.title }} </a>
                <span class="badge">{{ d.source.enriched.url.docSentiment.score | round(2, 'ceil')  }}</span>
                <br/>
                {% for c in d.source.enriched.url.concepts %}  <span class="label label-">{{ c.text  }}</span> {% endfor %}
            </li>
        {% endif %}
        {% endfor %}
    </ul>    <h1>:(</h1>
    <ul>
        {% for d in docs %}
        {% if d.source.enriched.url.docSentiment.type == 'negative' %}
            <li class="list-group-item list-group-item-danger"> {{ d.timestamp|date("m/d/Y")  }} <a href="{{ d.source.enriched.url.url }}">{{ d.source.enriched.url.title }} </a>
                <span class="badge">{{ d.source.enriched.url.docSentiment.score | round(2, 'ceil')  }}</span>
                <br/>
                {% for c in d.source.enriched.url.concepts %}  <span class="label label-primary">{{ c.text  }}</span> {% endfor %}
            </li>
        {% endif %}
        {% endfor %}
    </ul>
{% endblock %}
